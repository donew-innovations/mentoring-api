{
	"name": "@donew/mentoring-api",
	"version": "0.0.0",
	"description": "The source code for the DoNew Mentoring API server",
	"author": {
		"name": "Vedant K",
		"url": "https://github.com/gamemaker1"
	},
	"license": "ISC",
	"main": "./build/index.js",
	"exports": "./build/index.js",
	"type": "module",
	"files": [
		"build",
		"package.json",
		"tsconfig.json",
		"pnpm-lock.yaml",
		"license.md",
		"readme.md"
	],
	"scripts": {
		"clean": "del-cli build/ coverage/ test-export/ *.log",
		"build": "tsup",
		"watch": "tsup --watch",
		"format:code": "xo --fix {source,tests}/**/*.ts",
		"format:rest": "prettier --write --ignore-path .gitignore .",
		"format": "run-s format:*",
		"lint:code": "xo {source,tests}/**/*.ts",
		"lint:rest": "prettier --check --ignore-path .gitignore .",
		"lint": "run-s lint:*",
		"jest": "cross-env TS_NODE_PROJECT=config/tsconfig.json NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
		"test:tsc": "tsc --project config/tsconfig.json",
		"test:lib": "cross-env FORCE_COLOR=2 pnpm firebase emulators:exec --project donew-mentoring-api-sandbox --export-on-exit test-export \"pnpm jest\"",
		"start": "cross-env FORCE_COLOR=2 pnpm firebase emulators:start --project donew-mentoring-api-sandbox",
		"deploy:prd": "firebase deploy --only functions,hosting --project donew-mentoring-api",
		"deploy:dev": "firebase deploy --only functions,hosting --project donew-mentoring-api-sandbox",
		"deploy": "run-s deploy:*",
		"develop": "run-p watch start",
		"compile": "run-s clean build",
		"test": "run-s compile lint test:*",
		"patch": "patch --forward node_modules/firebase-tools/lib/emulator/functionsEmulator.js patches/firebase-tools@10.2.0+verbosity.patch || true",
		"hooks": "husky install config/husky",
		"prepare": "bash -c \"[[ -z \\\"$FIREBASE_DEPLOY\\\" ]] && pnpm run-s patch compile hooks || true\""
	},
	"engines": {
		"node": "16",
		"pnpm": "6"
	},
	"dependencies": {
		"@google-cloud/functions-framework": "3.0.0",
		"chalk": "5.0.0",
		"class-transformer": "0.5.1",
		"cors": "2.8.5",
		"ejs": "3.1.6",
		"express": "4.17.3",
		"express-jsdoc-swagger": "1.6.7",
		"express-openapi-validator": "4.13.5",
		"express-rate-limit": "6.3.0",
		"express-request-id": "2.0.1",
		"fengari": "0.1.4",
		"firebase-admin": "10.0.2",
		"firebase-functions": "3.18.1",
		"flua": "0.2.2",
		"got": "12.0.1",
		"helmet": "5.0.2",
		"nanoid": "3.3.1",
		"redent": "4.0.0",
		"winston": "3.6.0"
	},
	"devDependencies": {
		"@types/ejs": "3.1.0",
		"@types/express": "4.17.13",
		"@types/express-request-id": "1.4.3",
		"@types/jest": "27.4.0",
		"@types/node": "16.11.19",
		"@types/swagger-ui-express": "4.1.3",
		"commitizen": "4.2.4",
		"cross-env": "7.0.3",
		"cz-conventional-changelog": "3.3.0",
		"del-cli": "4.0.1",
		"firebase-tools": "10.2.1",
		"husky": "7.0.4",
		"jest": "27.5.1",
		"jest-to-match-shape-of": "1.3.2",
		"lint-staged": "12.3.4",
		"npm-run-all": "4.1.5",
		"prettier": "2.5.1",
		"serve": "13.0.2",
		"ts-jest": "27.1.3",
		"ts-node": "10.5.0",
		"tsup": "5.11.13",
		"typescript": "4.5.5",
		"xo": "0.48.0"
	},
	"tsup": {
		"entry": [
			"source/provider/init/index.ts"
		],
		"format": [
			"esm"
		],
		"target": "esnext",
		"tsconfig": "config/tsconfig.json",
		"outDir": "build/"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"@typescript-eslint/no-empty-function": 0,
			"@typescript-eslint/no-confusing-void-expression": 0,
			"@typescript-eslint/no-unsafe-assignment": 0,
			"@typescript-eslint/no-unsafe-call": 0,
			"@typescript-eslint/restrict-template-expressions": 0,
			"import/extensions": [
				2,
				"never"
			],
			"no-await-in-loop": 0
		},
		"parserOptions": {
			"project": "config/tsconfig.json"
		}
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"proseWrap": "always",
		"endOfLine": "lf",
		"printWidth": 90
	},
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"globals": {
			"ts-jest": {
				"useESM": true
			}
		},
		"collectCoverage": false,
		"coverageProvider": "v8",
		"testTimeout": 30000,
		"testMatch": [
			"**/tests/**/*.test.[jt]s"
		],
		"setupFilesAfterEnv": [
			"./tests/setup.ts"
		],
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"(\\.{1,2}/.*)\\.js$": "$1"
		}
	},
	"lint-staged": {
		"{source,tests}/**/*.ts": "xo --fix",
		"**/*.{md,json,yaml,html}": "prettier --write"
	},
	"pnpm": {
		"overrides": {
			"node-forge@<1.0.0": ">=1.0.0",
			"node-fetch@<2.6.7": ">=2.6.7"
		}
	}
}

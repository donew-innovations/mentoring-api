{
	"name": "@godonew/today-api",
	"version": "0.0.0",
	"description": "The source code for the DoNew Today API server",
	"author": {
		"name": "Vedant K",
		"url": "https://github.com/gamemaker1"
	},
	"license": "ISC",
	"main": "./dist/index.js",
	"exports": "./dist/index.js",
	"type": "module",
	"files": [
		"build",
		"package.json",
		"tsconfig.json",
		"pnpm-lock.yaml",
		"license.md",
		"readme.md"
	],
	"scripts": {
		"clean": "del-cli dist/ coverage/ test-export/ *.log",
		"build": "tsup --format esm --target esnext source/index.ts",
		"compile": "run-s clean build",
		"start": "firebase emulators:start",
		"format": "xo --fix",
		"lint": "xo",
		"test:typ": "tsc --noEmit",
		"test:lib": "firebase emulators:exec --export-on-exit test-export \"pnpm cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --runInBand\"",
		"test": "run-s compile lint test:*",
		"prepare": "run-s compile && husky install config/husky"
	},
	"engines": {
		"node": "16",
		"pnpm": "6"
	},
	"dependencies": {
		"@google-cloud/functions-framework": "^2.1.0",
		"class-transformer": "^0.5.1",
		"cors": "^2.8.5",
		"express": "4.17.2",
		"express-jsdoc-swagger": "^1.6.7",
		"express-openapi-validator": "4.13.5",
		"express-rate-limit": "^6.1.0",
		"express-request-id": "2.0.1",
		"firebase-admin": "10.0.1",
		"firebase-functions": "^3.16.0",
		"got": "12.0.1",
		"helmet": "5.0.1",
		"jest-to-match-shape-of": "^1.3.1",
		"nanoid": "3.2.0",
		"superstruct": "^0.15.3"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/express-request-id": "^1.4.3",
		"@types/jest": "27.4.0",
		"@types/node": "16.11.19",
		"@types/swagger-ui-express": "^4.1.3",
		"cross-env": "^7.0.3",
		"del-cli": "^4.0.1",
		"firebase-tools": "10.1.0",
		"husky": "^7.0.4",
		"jest": "27.4.7",
		"lint-staged": "12.1.7",
		"npm-run-all": "^4.1.5",
		"serve": "^13.0.2",
		"ts-jest": "27.1.3",
		"ts-node": "^10.4.0",
		"tsconfig-paths": "^3.12.0",
		"tsup": "^5.11.11",
		"typescript": "4.5.4",
		"xo": "^0.47.0"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"@typescript-eslint/no-empty-function": 0,
			"@typescript-eslint/no-confusing-void-expression": 0,
			"@typescript-eslint/no-unsafe-assignment": 0,
			"@typescript-eslint/no-unsafe-call": 0,
			"@typescript-eslint/restrict-template-expressions": 0,
			"no-await-in-loop": 0
		}
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"proseWrap": "always",
		"endOfLine": "lf"
	},
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"globals": {
			"ts-jest": {
				"useESM": true
			}
		},
		"collectCoverage": false,
		"coverageProvider": "v8",
		"testTimeout": 30000,
		"testMatch": [
			"**/test/**/*.test.[jt]s"
		],
		"setupFilesAfterEnv": [
			"./test/setup.ts"
		],
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"^(\\.{1,2}/.*)\\.js$": "$1"
		}
	},
	"lint-staged": {
		"{source,test}/**/*.ts": "xo --fix"
	}
}
